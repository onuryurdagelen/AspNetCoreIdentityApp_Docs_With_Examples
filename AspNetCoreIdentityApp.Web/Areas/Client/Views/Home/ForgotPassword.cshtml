@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


<div class="login-form-bg h-100">
    <div class="container h-100">
        <div class="row justify-content-center h-100">
            <div class="col-xl-6">
                <div class="form-input-content">
                    <div class="card login-form mb-0">
                        <div class="card-body pt-5">
                            <a class="text-center" href="index.html"> <h4>Forgot Password</h4></a>

                            @if (TempData["SuccessMessage"] != null)
                            {
                                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                            }
                            @if (TempData["ErrorMessage"] != null)
                            {
                                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                            }
                            <form asp-area="Client" asp-controller="Home" asp-action="ForgotPassword" method="post" class="mt-5 mb-3 login-input">
                                <div class="form-group">
                                    <input type="email" asp-for="EmailAddress" class="form-control" placeholder="Email Address">
                                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                                </div>
                                <button class="btn login-form__btn submit w-100">Send</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

