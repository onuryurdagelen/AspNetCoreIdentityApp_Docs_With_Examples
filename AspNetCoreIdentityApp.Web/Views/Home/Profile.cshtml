@model ProfileEditViewModel
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    @await Html.PartialAsync("~/Views/Partials/_FileReaderScriptPartial.cshtml")
}




<h1>Profile</h1>

<div class="container-fluid">
    <div class="row">

        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        <div class="col-md-6">
            <div class="card card-primary card-outline">
                <div class="card-body box-profile">
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <div class="text-start">
                                <img class="profile-user-img img-fluid img-circle" id="uploadedImage" src="@Model.PhotoSrc" alt="User profile picture">
                            </div>
                        </div>
                    </div>

                    <form asp-controller="Home" asp-action="UpdateProfile" class="form-horizontal" enctype="multipart/form-data">
                    <input type="hidden" class="form-control" asp-for="UserId">
                    <div class="form-group row">
                    <label for="inputName" class="col-sm-2 col-form-label">First Name</label>
                    <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="FirstName" placeholder="First Name">
                    </div>
                    </div>
                        <div class="form-group row">
                            <label for="inputName" class="col-sm-2 col-form-label">Last Name</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="LastName" placeholder="Last Name">
                            </div>
                        </div>
                    <div class="form-group row">
                    <label for="inputEmail" class="col-sm-2 col-form-label">Email Address</label>
                    <div class="col-sm-10">
                    <input type="email" class="form-control" asp-for="EmailAddress" placeholder="EmailAddress">
                    </div>
                    </div>
                    <div class="form-group row">
                            <label asp-for="Phone" class="col-sm-2 col-form-label">Phone Number</label>
                            <div class="col-sm-10 input-group">
                                <input type="text" class="form-control" asp-for="Phone" data-inputmask="&quot;mask&quot;: &quot;(999) 999-9999&quot;" data-mask="" inputmode="text">
                            </div>
                    </div>
                        <div class="form-group row">
                            <label asp-for="City" class="col-sm-2 col-form-label">City</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="City" placeholder="City"></input>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="BirthDate" class="col-sm-2 col-form-label">Birth Date</label>
                            <div class="col-sm-10">
                                <input type="date" asp-for="BirthDate" placeholder="Birth Date" class="form-control">
                               
                            </div>
                        </div>
                            <div class="form-group row">
                            <label asp-for="GenderType" class="col-sm-2 col-form-label">Gender Type</label>
                            <div class="col-sm-10">
                                <select asp-for="GenderType" class="form-control">
                                    <option disabled selected="selected">Select a gender</option>
                                    <option value="0">Male</option>
                                    <option value="1">Female</option>
                                   
                                </select>
                            </div>
                            </div>
                        <div class="form-group row">
                            <label asp-for="Photo" class="col-sm-2 col-form-label">Photo</label>
                            <div class="col-sm-10 d-flex align-items-center">
                                <input type="file" asp-for="Photo" placeholder="Photo">

                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block"><b>Update</b></button>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


